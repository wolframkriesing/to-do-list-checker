{
  "name": "to-do-list-checker",
  "version": "4.0.0",
  "description": "Checks a list of to do items to determine if the project is ready for release.",
  "main": "index.js",
  "bin": "bin/index.js",
  "scripts": {
    "test": "kavun `bash -c 'ls src/*.spec.js'` --reporter=minimal",
    "releasable": "npm test && node -r esm ./bin/index.js",
    "release": "npm version major",
    "typecheck": "tsc",
    "dev:typecheck": "npm run typecheck -- --watch",
    "dev:test": "while true; do sleep 5; clear; npm run test --silent; done"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wolframkriesing/to-do-list-checker.git"
  },
  "keywords": [
    "changelog",
    "todo",
    "version",
    "release"
  ],
  "author": "Wolfram Kriesing",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wolframkriesing/to-do-list-checker/issues"
  },
  "homepage": "https://github.com/wolframkriesing/to-do-list-checker#readme",
  "devDependencies": {
    "@types/node": "^13.9.1",
    "kavun": "^3.0.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "esm": "^3.2.25"
  }
}
